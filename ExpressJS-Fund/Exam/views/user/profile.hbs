<h1>My Profile</h1>
<div class="profile-box">
	<img src="{{profilePic}}">
	<div class="profile">
		<div class="info">
			<h3>My Teams</h3>
			<form>
				{{#if teams}}
					{{#each teams}}
						<p>{{name}}</p>
						<form id="logout-form" action="/leave/{{id}}" method="POST">
							<input type="submit" value="Leave Team">
						</form>
					{{/each}}
				{{else}}
					<p>You have no teams!</p>
				{{/if}}
			</form>
		</div>
		<div class="more-info">
			<h3>My Projects</h3>
			{{#if projects}}
				{{#each projects}}
					<p>{{name}}</p>
				{{/each}}
			{{else}}
				<p>You have no projects!</p>
			{{/if}}
		</div>
	</div>
</div>